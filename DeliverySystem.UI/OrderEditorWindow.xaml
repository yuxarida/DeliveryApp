<Window x:Class="DeliverySystem.UI.OrderEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Нове замовлення" Height="450" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Створення замовлення" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBox x:Name="SenderIdTxt" materialDesign:HintAssist.Hint="ID Відправника (напр. 1)" Margin="0,10"/>
        <TextBox x:Name="ReceiverIdTxt" materialDesign:HintAssist.Hint="ID Отримувача (напр. 2)" Margin="0,10"/>
        <TextBox x:Name="WeightTxt" materialDesign:HintAssist.Hint="Вага (кг)" Margin="0,10"/>
        <TextBox x:Name="PriceTxt" materialDesign:HintAssist.Hint="Початкова ціна" Margin="0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button Content="Зберегти" Click="BtnSave_Click" Margin="0,0,10,0"/>
            <Button Content="Скасувати" Click="BtnCancel_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </StackPanel>
</Window>