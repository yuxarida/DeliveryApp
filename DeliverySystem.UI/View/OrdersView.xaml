<UserControl x:Class="DeliverySystem.UI.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Список Замовлень" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Command="{Binding AddCommand}" Visibility="{Binding AdminVisibility}" Content="Додати" Margin="20,0,0,0"/>
            <Button Command="{Binding DeleteCommand}" Visibility="{Binding AdminVisibility}" Content="Видалити" Margin="10,0,0,0" Style="{StaticResource MaterialDesignOutlinedButton}" Foreground="Red" BorderBrush="Red"/>
            <Button Command="{Binding RefreshCommand}" Content="Оновити" Margin="10,0,0,0" Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}"
                  IsReadOnly="True" AutoGenerateColumns="True" CanUserAddRows="False"
                  materialDesign:DataGridAssist.CellPadding="10"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="10">
            <!-- Стилі рядків -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OrderStatus}" Value="Доставлено">
                            <Setter Property="Background" Value="#E8F5E9"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding OrderStatus}" Value="Скасовано">
                            <Setter Property="Background" Value="#FFEBEE"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>