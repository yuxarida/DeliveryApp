<UserControl x:Class="DeliverySystem.UI.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock Text="Фінансова Звітність" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <materialDesign:Card Padding="20" Width="400">
                <StackPanel>
                    <DatePicker SelectedDate="{Binding StartDate}" materialDesign:HintAssist.Hint="Початкова дата" Margin="0,10"/>
                    <DatePicker SelectedDate="{Binding EndDate}" materialDesign:HintAssist.Hint="Кінцева дата" Margin="0,10"/>
                    <Button Command="{Binding CalculateCommand}" Content="Розрахувати дохід" Margin="0,20,0,0"/>
                    <Border Background="#F5F5F5" Margin="0,20,0,0" Padding="15" CornerRadius="5">
                        <TextBlock Text="{Binding ResultText}" FontSize="18" FontWeight="Bold" TextAlignment="Center" Foreground="#333"/>
                    </Border>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
    </Grid>
</UserControl>